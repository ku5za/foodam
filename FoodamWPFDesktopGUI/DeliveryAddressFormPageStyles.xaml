<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:FoodamWPFDesktopGUI">
    <Style x:Key="FoodamName_LabelStyle" TargetType="Label">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="48px"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#313131"/>
    </Style>

    <Style x:Key="DeliveryAddressInput_TextBoxStyle" TargetType="TextBox">
        <Setter Property="Width" Value="400px"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="FontSize" Value="20px"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="BorderBrush" Value="#707070"/>
    </Style>

    <Style x:Key="SearchRestaurantButton_BorderStyle" TargetType="Border">
        
    </Style>
</ResourceDictionary>